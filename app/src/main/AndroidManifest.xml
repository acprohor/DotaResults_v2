<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.acpro.dotaresults">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MatchActivity"
            android:label="@string/title_activity_match2"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".TournamentsListActivity"
            android:label="@string/title_activity_tournaments_list"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".TournamentActivity"
            android:label="@string/title_activity_tournament"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".TeamListActivity"
            android:label="@string/title_activity_team_list"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".TeamActivity"
            android:label="@string/title_activity_team"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
    </application>

</manifest>