<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acpro.dotaresults.fragments.ButtonsBar">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonLast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Last"
            app:layout_constraintEnd_toStartOf="@+id/buttonPresent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonPresent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Present"
            app:layout_constraintBottom_toBottomOf="@+id/buttonLast"
            app:layout_constraintEnd_toStartOf="@+id/buttonFuture"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buttonLast"
            app:layout_constraintTop_toTopOf="@+id/buttonLast" />

        <Button
            android:id="@+id/buttonFuture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Future"
            app:layout_constraintBottom_toBottomOf="@+id/buttonPresent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buttonPresent"
            app:layout_constraintTop_toTopOf="@+id/buttonPresent" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
